@model IS.Web.Components.Dtos.SafetyTeamMemberDto

<div class="col-md-8 col-md-offset-2">
    <div class="row form-section">
        <div class="col-md-4 form-section-caption">
            Team Member<br />
        </div>
        <div class="form-section-body col-md-8">
            <input type="hidden" asp-for="Id" />
            <div class="form-row row">
                <div class="form-group">
                    <div class="col-xs-12">
                        <div asp-validation-summary="All"></div>
                        <label class="control-label">Email</label>
                        <input type="text" asp-for="Email" class="form-control width-full" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        <label class="control-label">First Name</label>
                        <input type="text" asp-for="FirstName" class="form-control width-full" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        <label class="control-label">Last Name</label>
                        <input type="text" asp-for="LastName" class="form-control width-full" />
                    </div>
                </div>
                <div class="form-group">
                    You are unable to make changes your own record.
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        <label class="control-label">Account Manager</label>
                        <input type="checkbox" asp-for="IsManager" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-12">
                        <label class="control-label">Account Owner</label>
                        <input type="checkbox" asp-for="IsOwner" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

