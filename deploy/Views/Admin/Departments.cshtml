@using Microsoft.AspNetCore.Mvc.ViewFeatures
@model IS.Web.Components.ViewModels.DepartmentsViewModel

@{
    ViewBag.Title = "Departments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Caption
{Departments}


@section SideNav {
    @Html.Partial( "~/Views/Shared/_AdminSideNav.cshtml", null, new ViewDataDictionary( ViewData ) { { "SelectedNavText", "Departments" } } ) )
}


@section TopButtons
{
    <a href="departments/add" class="btn btn-success">Add New</a>
}


<div class="col-md-10 col-md-offset-1">
    <div class="section">
        <div class="section-content">
            <div class="section-row">
                <div class="section-cell">
                    <table class="table-section" style="border-collapse: collapse; table-layout: fixed;">
                        <thead>
                            <tr>
                                <th style="width: 6%; text-align: center">Edit</th>
                                <th style="width: 20%">Name</th>
                                <th style="width: 74%">Safety Zone</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach ( var department in Model.Departments )
                            {
                                <tr style="height: 30px">
                                    <td style="text-align: center">
                                        <a href="departments/@department.Id">
                                            <span class="glyphicon glyphicon-edit" style="font-size: 14pt" aria-hidden="true"></span>
                                        </a>
                                    </td>
                                    <td>
                                        @department.Name
                                    </td>
                                    <td>
                                        @department.SafetyZoneName
                                    </td>
                                    
                                </tr>
                            }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


